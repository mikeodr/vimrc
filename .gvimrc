" set default font 
" Inconsolata, Medium weight 
" 10 point 
set gfn=Inconsolata\ Medium\ 10

" remove scrollbars 
set guioptions-=l 
set guioptions-=L 
set guioptions-=r 
set guioptions-=b 
                                                                                                    
" remove toolbar 
set guioptions-=T 
                                                                                                    
" don't hide the mouse while typing 
set nomousehide 

" set block cursor during insert 
set guicursor+=i:block-Cursor 
